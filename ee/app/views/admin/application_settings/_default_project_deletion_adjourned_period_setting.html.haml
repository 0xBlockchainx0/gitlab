- return unless License.feature_available?(:marking_project_for_deletion)

- f = local_assigns.fetch(:form)

.form-group
  = f.label s_('Default project deletion adjourned period'), class: 'label-bold'
  = f.select :project_deletion_adjourned_period, options_for_select(0..7, @application_setting.project_deletion_adjourned_period), {}, class: 'form-control'
  = f.label :project_deletion_adjourned_period, class: 'form-check-label' do
    = _('How many days need to pass between marking project for deletion and actual removing it.')
