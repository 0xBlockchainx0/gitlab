- can_view_security_dashboard = project_nav_tab?(:security)
-# TODO: Change this with check for permission to view DL, once it's there
- can_view_dependency_list = @project.feature_available?(:dependency_list)

- return unless can_view_security_dashboard || can_view_dependency_list

- top_level_link = can_view_security_dashboard ? project_security_dashboard_path(@project) : project_dependencies_path(@project)
- top_level_qa_selector = can_view_security_dashboard ? 'link_security_dashboard' : 'dependency_list_link'

= nav_link(path: sidebar_security_paths) do
  = link_to top_level_link, data: { qa_selector: top_level_qa_selector } do
    .nav-icon-container
      = sprite_icon('shield')
    %span.nav-item-name
      = _('Security & Compliance')

  %ul.sidebar-sub-level-items
    = nav_link(path: sidebar_security_paths, html_options: { class: "fly-out-top-item" } ) do
      = link_to top_level_link do
        %strong.fly-out-top-item-name
          = _('Security & Compliance')
    %li.divider.fly-out-top-item

    - if can_view_security_dashboard
      = nav_link(path: 'projects/security/dashboard#show') do
        = link_to project_security_dashboard_path(@project), title: _('Security Dashboard') do
          %span= _('Security Dashboard')

    - if can_view_dependency_list 
      = nav_link(path: 'projects/dependencies#show') do
        = link_to project_dependencies_path(@project), title: _('Dependency List'), data: { qa_selector: 'dependency_list_link' } do
          %span= _('Dependency List')